.edit-header {
  border-top: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  background-color: transparent;
  box-sizing: border-box;
  position: relative;
  height: 240rpx;
  padding: 32rpx 0;    
}

.edit-header .edit-good-imgwp {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -88rpx;
  margin-top: -88rpx;
  width: 176rpx;
  height: 176rpx;    
}

.edit-body {
  background-color: #fff;
  border-bottom: 1rpx solid #999;  
  padding: 0 32rpx;  
}

.edit-body .edit-body-title {
  border-bottom: 1rpx solid #999;
  line-height: 98rpx;
  min-height: 98rpx;    
}

.edit-body .propname {
  color: #999;
  font-size: 30rpx;
  padding-right: 48rpx;    
}

.edit-body-title .propvalue text {
  color: #3c4350;
  font-size: 36rpx;  
  word-break: break-all;  
  word-wrap: break-word;
}

.edit-body-topic {
  min-height: 260rpx;
  padding: 28rpx 0;  
  word-break: break-all;  
  word-wrap: break-word;  
}

.edit-body-topic .propvalue text {
  color: #9da1a7;
  font-size: 24rpx;
  line-height: 36rpx;
}

.btn-bar {
  margin-top: 120rpx;
  padding: 0 30rpx;
}
